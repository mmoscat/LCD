// Declaring the font, 95 characters, 7 pixels wide, starting at character 32
Font font(courier, 95, 7, 32);

// The LCD instance
LCD lcd;

void setup()
{
     // Attempt to initialize the LCD as buffered (default)
     if (lcd.init()) {
	  // When successful, turn on the backlight, and set to not auto-flush
	  lcd.setBacklight();
	  lcd.setAutoFlush(false);

	  // Set the couririer font as the LCD font
	  lcd.setFont(font);

	  // Write text into screen buffer
	  lcd.writeString("LCD", 24, 8, 2);

	  // Set the default font as the LCD font
	  lcd.setFont(Font());

	  // Write text into screen buffer
	  lcd.writeString("INITIALIZED", 8, 24);

	  // Flush screen buffer
	  lcd.flush();

	  delay(800);

	  // Clear screen buffer, but don't yet flush
	  lcd.clear();
     }
}

void loop()
{
     // Set the default font as the LCD font
     lcd.setFont(Font());
     lcd.writeString("This is the default font", 0, 0);

     // Set the courier font as the LCD font
     lcd.setFont(font);
     lcd.writeString("This is the courier font", 0, 24);

     lcd.flush();
     lcd.clear();

     delay(5000);

     // Write "Test" in the courier font
     lcd.writeString("Test", 5, 16, 2);
     lcd.writeString("(Courier)", 10, 32, 1);

     lcd.flush();
     lcd.clear();

     delay(3000);

     // Set the default font
     lcd.setFont(Font());

     // Write "Test" in the default font
     lcd.writeString("Test", 5, 16, 2);
     lcd.writeString("(Default)", 10, 32, 1);

     lcd.flush();
     lcd.clear();

     delay(3000);
}
